<div class="page-header">
  <h1>Add Favorite</h1>
</div>

<% if @favorite.errors.any? %>
  <% @favorite.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>


<form action="/create_favorite" class="form-horizontal">
  <!-- Label and input for user_id -->
  <div class="form-group">
    <label for="user_id" class="col-sm-2 control-label">
      User
    </label>
    <div class="col-sm-10">
      <select name="user_id">
        <% User.all.each do |user| %>
          <option value="<%= user.id %>"><%= user.username %></option>
        <% end %>
      </select>

      <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :username, @favorite.user_id)) %>
    </div>
  </div>

  <!-- Label and input for dish_id -->
  <div class="form-group">
    <label for="dish_id" class="col-sm-2 control-label">
      Dish
    </label>
    <div class="col-sm-10">
      <input type="text" id="dish_id" name="dish_id" placeholder="Dish" class="form-control" value="<%= @favorite.dish_id %>">
    </div>
  </div>

  <!-- Label and input for venue_id -->
  <div class="form-group">
    <label for="venue_id" class="col-sm-2 control-label">
      Venue
    </label>
    <div class="col-sm-10">
      <input type="text" id="venue_id" name="venue_id" placeholder="Venue" class="form-control" value="<%= @favorite.venue_id %>">
    </div>
  </div>

  <!-- Label and input for notes -->
  <div class="form-group">
    <label for="notes" class="col-sm-2 control-label">
      Notes
    </label>
    <div class="col-sm-10">
      <textarea id="notes" name="notes" placeholder="Notes" class="form-control" rows="3"><%= @favorite.notes %></textarea>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Create Favorite" class="btn btn-primary">
    </div>
  </div>
</form>
